pipeline {
    agent any
 
    environment {
        S3_BUCKET = 'my-s3-bucket-for-jenkins-pipeline-setup1'
        S3_KEY = 'my-app.zip'
        ENVIRONMENT_NAME = 'Bean-pro-env'
        APPLICATION_NAME = 'bean-pro'
        AWS_REGION = 'us-east-1'
        VERSION_LABEL = "app-version-${BUILD_NUMBER}"
    }
 
    stages {
        stage('Verify Application Zip') {
            steps {
                script {
                    def appZipPath = './application.zip'  // Update this to the correct path of your zip file
                    if (!fileExists(appZipPath)) {
                        error "The application.zip file does not exist at ${appZipPath}. Please check the file path."
                    }
                    echo "The application.zip file exists and is ready for upload."
                }
            }
        }
 
        stage('Upload to S3') {
            steps {
                bat "aws s3 cp .\\application.zip s3://${S3_BUCKET}/${S3_KEY} --region ${AWS_REGION}"
                  }
        }

        stage('Create Application Version') {
            steps {
                bat """
                    aws elasticbeanstalk create-application-version ^
                    --application-name ${APPLICATION_NAME} ^
                    --version-label ${VERSION_LABEL} ^
                    --source-bundle S3Bucket=${S3_BUCKET},S3Key=${S3_KEY} ^
                    --region ${AWS_REGION}
                    """
                   }
        }

        stage('Update Elastic Beanstalk Environment') {
            steps {
                bat """
                    aws elasticbeanstalk update-environment ^
                    --application-name ${APPLICATION_NAME} ^
                    --environment-name ${ENVIRONMENT_NAME} ^
                    --version-label ${VERSION_LABEL} ^
                    --region ${AWS_REGION}
                    """
                   }
            }

 
    post {
        success {
            echo 'Deployment process completed successfully.'
        }
        failure {
            echo 'Deployment process failed. Please check the logs for more details.'
        }
    }
}
